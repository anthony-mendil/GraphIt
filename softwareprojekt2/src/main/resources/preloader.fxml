            fx:controller="gui.PreloaderController">
    <center>
        <GridPane alignment="CENTER" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
