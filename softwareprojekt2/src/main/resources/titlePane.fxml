<?xml version="1.0" encoding="UTF-8"?>

<?import gui.TitlesDialogPaneController?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<DialogPane fx:id="titleDialog" stylesheets="gui_style.css" xmlns="http://javafx.com/javafx/10.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.TitlesDialogPaneController">

    <content>
        <VBox minHeight="-Infinity" prefHeight="150.0" prefWidth="400.0">
            <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                  prefHeight="50.0" prefWidth="400.0">
                <Text fx:id="germanText" strokeType="OUTSIDE" strokeWidth="0.0" text="%german" wrappingWidth="150.0"/>
                <TextField fx:id="german" prefHeight="25.0" prefWidth="230.0"/>
            </HBox>
            <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                  prefHeight="50.0" prefWidth="400.0">
                <Text fx:id="englishText" strokeType="OUTSIDE" strokeWidth="0.0" text="%english" wrappingWidth="150.0"/>
                <TextField fx:id="english" prefHeight="25.0" prefWidth="230.0"/>
            </HBox>
        </VBox>
    </content>

    <TitlesDialogPaneController fx:constant="SAVE_TYPE" />
    <TitlesDialogPaneController fx:constant="CANCEL_TYPE" />
</DialogPane>


