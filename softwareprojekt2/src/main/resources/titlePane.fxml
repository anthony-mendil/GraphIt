<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<DialogPane fx:id="titleDialog" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.TitlesDialogPaneController">
   <content>
      <VBox minHeight="-Infinity" prefHeight="150.0" prefWidth="400.0">
         <children>
            <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="400.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Deutsch" wrappingWidth="150.0" />
                  <TextField fx:id="german" prefHeight="25.0" prefWidth="230.0" />
               </children>
            </HBox>
            <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="400.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Englisch" wrappingWidth="150.0" />
                  <TextField fx:id="english" prefHeight="25.0" prefWidth="230.0" />
               </children>
            </HBox>
            <CheckBox mnemonicParsing="false" text="verschiedene Sprachen aktivieren" />
            <FlowPane minHeight="-Infinity" minWidth="-Infinity" nodeOrientation="RIGHT_TO_LEFT" prefHeight="50.0" prefWidth="400.0">
               <children>
                  <Button fx:id="cancel" mnemonicParsing="false" onAction="#close" text="cancel" />
                  <Button fx:id="save" mnemonicParsing="false" onAction="#save" text="speichern">
                     <FlowPane.margin>
                        <Insets right="10.0" />
                     </FlowPane.margin>
                  </Button>
               </children></FlowPane>
         </children>
      </VBox>
   </content>
</DialogPane>
